<resources>
    <style name="Click">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Divider">
        <item name="android:background">?colorOnSurface</item>
        <item name="android:alpha">.20</item>
    </style>

    <style name="Item">
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="LeagueItem">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ReportText">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="ReportTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?colorOnSurface</item>
        <item name="boxStrokeColor">?colorOnSurface</item>

    </style>

    <style name="ReportTitle">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ScoreDivider">
        <item name="android:background">@color/dark_gray1</item>
        <item name="android:alpha">.50</item>
    </style>

    <style name="ScoreDelta">
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">#222</item>
        <item name="android:textColor">@color/score_color</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="Score">
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">#222</item>
        <item name="android:textColor">@color/score_color</item>
        <item name="android:textSize">108sp</item>
    </style>

    <style name="StandingsText">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

</resources>
