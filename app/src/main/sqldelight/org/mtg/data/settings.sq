CREATE TABLE settings(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    darkMode INTEGER AS Boolean NOT NULL DEFAULT 0,
    selectedLeagueId INTEGER NOT NULL DEFAULT 0,
    selectedLeagueName TEXT NOT NULL DEFAULT ""
);

insert:
INSERT INTO settings(id, darkMode, selectedLeagueId, selectedLeagueName)
VALUES(?,?,?,?);

delete:
DELETE FROM settings WHERE id = :settings_id;

get:
SELECT * FROM settings WHERE id = :settings_id;
